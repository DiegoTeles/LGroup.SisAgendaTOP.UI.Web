@*SUBIMOS A NAMESPACE DE MODELOS
    PLENO*@
@model List<LGroup.SisAgendaTOP.Model.ContatoMOD>


@{
    ViewBag.Title = "Listar Contatos";
    ViewBag.SubTitle = "Contatos Ativos";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

@*INSERIMOS UMA TABELA*@
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Deletar</th>
            <th>Editar</th>
            <th>Nome</th>
            <th>E-Mail</th>
            <th>Telefone</th>
            <th>Data de Nascimento</th>
            <th>Sexo</th>
            <th>CEP</th>
            <th>Logradouro</th>
            <th>Bairro</th>
            <th>Numero</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contato in Model)
        {
            <tr>
                <td>
                    <a href="/Contato/Deletar/@contato.CodigoContato">
                        <img src="~/Content/images/img_Deletar.png" title="Clique para deletar" />
                    </a>
                </td>
                <td>
                    <a href="/Contato/Editar/@contato.CodigoContato">
                        <img src="~/Content/images/img_Editar.png" title="Clique para editar" />
                    </a>
                </td>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Telefone</td>
                <td>@contato.DataNascimento</td>
                <td>@contato.Sexo.DescricaoSexo</td>
                <td>@contato.CEP</td>
                <td>@contato.Logradouro</td>
                <td>@contato.Bairro</td>
                <td>@contato.Numero</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="2">Total: @Model.Count()</th>
            <th colspan="2">Feminino: @Model.Count(x => x.Sexo.CodigoSexo == 1)</th>
            <th colspan="2">Masculino: @Model.Count(x => x.Sexo.CodigoSexo == 2)</th>
        </tr>
    </tfoot>
</table>


