@*CARREGAMOS A NAMESPACE DE MODELOS
    DE MODO SENIOR*@
@model ContatoMOD


<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", placeholder = "Informe o nome", required = "required" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="col-sm-6 col-md-6 col-lg-6 form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Informe o e-mail", required = "required" })
        @Html.ValidationMessageFor(x => x.Email)
        @*BTN-XS: DEIXAMOS O BOTÃO DO TAMANHO PEQUENO *@
        <input type="button" name="consultar" id="consultar" value="Consultar" class="btn btn-danger btn-xs" />
    </div>
</div>

<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 form-group">
        @Html.LabelFor(x => x.Telefone)
        @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4 form-group">
        @Html.LabelFor(x => x.DataNascimento)
        @Html.TextBoxFor(x => x.DataNascimento, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.DataNascimento)
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4 form-group">
        @Html.LabelFor(x => x.Sexo)
        @Html.DropDownListFor(x => x.Sexo.CodigoSexo, ViewBag.Sexo as SelectList, "Selecione...", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Sexo)
        @*<select name="sexo" id="sexo" class="form-control">
                <option value="0">Selecione...</option>
                <option value="1">Feminino</option>
                <option value="2">Masculino</option>
            </select>*@
    </div>
</div>

<div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2 form-group">
        @Html.LabelFor(x=>x.CEP)
        @Html.TextBoxFor(x => x.CEP, new { @class = "form-control", required = "required" })
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 form-group">
        @Html.LabelFor(x=>x.Logradouro)
        @Html.TextBoxFor(x => x.Logradouro, new { @class = "form-control", required = "required" })
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 form-group">
        @Html.LabelFor(x=>x.Bairro)
        @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control", required = "required" })
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 form-group">
        @Html.LabelFor(x=>x.Numero)
        @Html.TextBoxFor(x => x.Numero, new { @class = "form-control", required = "required" })
    </div>
</div>