<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--IMPORTAMOS OS SCRIPTS DO JQUERY-->
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/padrao.js"></script>

    <!--IMPORTAMOS OS SCRIPTS DO BOOTSTRAP-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--IMPORTAMOS AS BIBLIOTECAS DE CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.cerulean.min.css" rel="stylesheet" />

    @* INSERIMOS O LOGO DAS ABAS *@
    <link href="~/Content/images/img_LogoAbas.png" rel="shortcut icon" />

    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/start/jquery-ui.min.css" rel="stylesheet" />

    <style>
        body {
            padding-bottom: 70px;
        }
    </style>

</head>
<body>
    <header>
        <img src="~/Content/images/img_LogoPrincipal.png" title="Logotipo da empresa" />

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="http://www.lgroup.com.br" target="_blank">LGroup</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Cadastrar Contato", "Cadastrar", "Contato")
                        </li>
                        <li>
                            @Html.ActionLink("Listar Contatos", "Listar", "Contato")
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="~/Contato/Logout">
                                <img src="~/Content/images/img_Logout.png" title="Clique para sair" />
                                Sair
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <hgroup class="text-center text-uppercase">
            <h1>@ViewBag.Title</h1>
            <h3>@ViewBag.SubTitle</h3>
        </hgroup>
    </header>
    @*CRIAMOS UMA SEÇÃO PARA CONTROLAR
        OS DISPARAMOS DE ALERTS*@
    <section>
        @if (TempData["Mensagem"] != null)
        {
            @Html.Partial("_PartialMensagem")
        }
    </section>
    @*CONTAINER: É UMA CLASSE DO BOOTSTRAP
        CENTRALIZADORA*@
    <section class="container">
        @*INSERIMOS O FILDSET DE FORMA DINAMICA*@
        <fieldset>
            <legend>@ViewBag.SubTitle</legend>
        </fieldset>
        @RenderBody()
    </section>
    <footer>
        @*STRONG: Negrito*@
        @*MARK: Destacar*@
        <nav class="navbar navbar-default navbar-fixed-bottom text-center text-uppercase">
            <div class="container">
                <p>&copy; Todos os direitos reservado ao <strong><mark>Diego Teles</mark></strong></p>
            </div>
        </nav>
    </footer>
</body>
</html>
